<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Gopnix{% endblock %} {% block sub_title %}Default{% endblock %}</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        {% if app.user is defined and app.user is not null %}
          {% set username = app.user.email %}
          {% set userrole = app.user.roles | join(", ", " and ") %}
        {% endif %}

        {% if username is not defined or username is empty %}
          {% set username = "Anonymous" %}
        {% endif %}

        {% if userrole is not defined  or userrole is empty %}
          {% set userrole = "Undefined" %}
        {% endif %}

        {% block stylesheets %}
            <!-- favicon -->
            <link rel="bookmark icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <!-- Bootstrap 3.3.7 -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/font-awesome/css/font-awesome.min.css') }}">
            <!-- Ionicons -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/Ionicons/css/ionicons.min.css') }}">
            <!-- iCheck -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/plugins/iCheck/flat/green.css') }}">
            <!-- Theme style -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/dist/css/AdminLTE.min.css') }}">
            <!-- AdminLTE Skins. Choose a skin from the css/skins
                 folder instead of downloading all of them to reduce the load. -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/dist/css/skins/_all-skins.min.css') }}">
            <!-- Morris chart -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/morris.js/morris.css') }}">
            <!-- jvectormap -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/jvectormap/jquery-jvectormap.css') }}">
            <!-- Date Picker -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}">
            <!-- Daterange picker -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/bower_components/bootstrap-daterangepicker/daterangepicker.css') }}">
            <!-- bootstrap wysihtml5 - text editor -->
            <link rel="stylesheet" href="{{ asset('AdminLTE-2.4.10/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}">

            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->

            <!-- Google Font -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

            <!-- Custom styles -->
            <link rel="stylesheet" href="{{ asset('css/skin-jsys.css') }}">
        {% endblock %}
    </head>
    <body class="hold-transition skin-jsys sidebar-mini">
        {% block body %}
            <div class="wrapper">

                <header class="main-header">
                    <!-- Logo -->
                    <a href="{{ path('home') }}" class="logo">
                        <!-- mini logo for sidebar mini 50x50 pixels -->
                        <span class="logo-mini"><img width="32px" height="32px" src="{{ asset('favicon.ico') }}"></span>
                        <!-- logo for regular state and mobile devices -->
                        <span class="logo-lg"><b>GOPNIX</b> <img width="32px" height="32px" src="{{ asset('favicon.ico') }}"></span>
                    </a>
                    <!-- Header Navbar: style can be found in header.less -->
                    <nav class="navbar navbar-static-top">
                        <!-- Sidebar toggle button-->
                        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                            <span class="sr-only">Toggle navigation</span>
                        </a>

                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <!-- User Account: style can be found in dropdown.less -->
                                <li class="dropdown user user-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
{#                                        <img src="" class="user-image" alt="User Image">#}
                                        <span class="hidden-xs">{{ username }}</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- User image -->
                                        <li class="user-header">
{#                                            <img src="" class="img-circle" alt="User Image">#}
                                            <p>
                                                {{ username }} - {{ userrole }}
                                                {#<small>Member since Nov. 2012</small>#}
                                            </p>
                                        </li>
                                        <!-- Menu Body -->
                                        <li class="user-body">
{#                                            <div class="row">#}
{#                                                <div class="col-xs-4 text-center">#}
{#                                                    <a href="#">Friends</a>#}
{#                                                </div>#}
{#                                            </div>#}
{#                                            <!-- /.row -->#}
                                        </li>
                                        <!-- Menu Footer-->
                                        <li class="user-footer">
{#                                            <div class="pull-left">#}
{#                                                <a href="#" class="btn btn-default btn-flat">Profile</a>#}
{#                                            </div>#}
                                            <div class="pull-right">
                                                <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat">
                                                    {{ "log_out"|trans }}
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                                <!-- Control Sidebar Toggle Button -->
                                <li>
                                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>
                <!-- Left side column. contains the logo and sidebar -->
                <aside class="main-sidebar">
                    <!-- sidebar: style can be found in sidebar.less -->
                    <section class="sidebar">
                        <!-- Sidebar user panel -->
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="" class="img-circle" alt="">
                            </div>
                            <div class="pull-left info">
                                <p>{{ username }}</p>
                                {#<a href="#"><i class="fa fa-circle text-success"></i> Online</a>#}
                            </div>
                        </div>
                        <!-- sidebar menu: : style can be found in sidebar.less -->
                        <ul class="sidebar-menu" data-widget="tree">
                            <li class="header">General</li>
                              <li>
                                  <a href="{{ path('transfer_data_index') }}">
                                      <i class="fa fa-exchange"></i> <span>Transfer Links</span>
                                      {#<span class="pull-right-container">
                                          <small class="label pull-right bg-blue"><i class="fa fa-circle"></i></small>
                                      </span>#}
                                  </a>
                              </li>
							  {# Maybe use later #}
                              {#<li>
                                  <a href="{{ path('almanac') }}">
                                      <i class="fa fa-th"></i> <span>The J.SYS Almanac</span>
                                      <span class="pull-right-container">
                                          <small class="label pull-right bg-blue">new</small>
                                      </span>
                                  </a>
                              </li>#}
							  {# Maybe use later #}
                              <li>
                                  <a href="{{ path('star') }}">
                                      <i class="fa fa-youtube-play"></i> <span>Streaming</span>
                                      {#<span class="pull-right-container">
                                          <small class="label pull-right bg-blue"><i class="fa fa-play"></i></small>
                                      </span>#}
                                  </a>
                              </li>
                            <li class="header">Downloads</li>
                              <li>
                                  <a href="{{ asset('downloads/WeTransferManager.7z') }}">
                                      <i class="fa fa-circle-o text-light-blue"></i> <span>WeTransfer Manager</span>
                                  </a>
                              </li>
                              {#<li>
                                  <a href="#">
                                      <i class="fa fa-circle-o text-light-blue"></i> <span>SyncronBytes Manager</span>
                                  </a>
                              </li>#}
                            {#<li class="header">APIs</li>
                              <li>
                                  <a href="#">
                                      <i class="fa fa-circle-o text-red"></i> <span>WeTransfer API</span>
                                  </a>
                              </li>
                              <li>
                                  <a href="#">
                                      <i class="fa fa-circle-o text-yellow"></i> <span>SyncronBytes API</span>
                                  </a>
                              </li>
                            <li class="header"></li>#}
                        </ul>
                    </section>
                    <!-- /.sidebar -->
                </aside>

                <!-- Content Wrapper. Contains page content -->
                <div class="content-wrapper">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <h1>
                            {% block page_title %}{{ block('title') }}{% endblock %}
                            <small>{% block page_sub_title %}{{ block('sub_title') }}{% endblock %}</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                            <li class="">{{ block('title') }}</li>
                            <li class="active">{{ block('sub_title') }}</li>
                        </ol>
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        {% block content %}Empty page...{% endblock %}
                    </section>
                    <!-- /.content -->
                </div>
                <!-- /.content-wrapper -->
                <footer class="main-footer">
                    <div class="pull-right hidden-xs">
                        <b>Version</b> 0.0.2
                    </div>
                    <strong>Copyright &copy; 2019 - 2020 J.SYS</strong> All rights reserved.
                </footer>

                <!-- Control Sidebar -->
                <aside class="control-sidebar control-sidebar-jsys">
                    <!-- Create the tabs -->
                    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                        <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <!-- Settings tab content -->
                        <div class="tab-pane" id="control-sidebar-settings-tab">
                            <form method="post">
                                <h3 class="control-sidebar-heading">General Settings</h3>

                                <div class="form-group">
                                    <label class="control-sidebar-subheading">
                                        Report panel usage
                                        <input type="checkbox" class="pull-right" checked>
                                    </label>

                                    <p>
                                        Some information about this general settings option
                                    </p>
                                </div>
                                <!-- /.form-group -->

                                <div class="form-group">
                                    <label class="control-sidebar-subheading">
                                        Turn off notifications
                                        <input type="checkbox" class="pull-right">
                                    </label>
                                </div>
                                <!-- /.form-group -->

                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                </aside>
                <!-- /.control-sidebar -->
                <!-- Add the sidebar's background. This div must be placed
                     immediately after the control sidebar -->
                <div class="control-sidebar-bg"></div>
            </div>
        {% endblock %}
        {% block javascripts %}
            <!-- jQuery 3 -->
            <script src="{{ asset('AdminLTE-2.4.10/bower_components/jquery/dist/jquery.min.js') }}"></script>
            <!-- jQuery UI 1.11.4 -->
            <script src="{{ asset('AdminLTE-2.4.10/bower_components/jquery-ui/jquery-ui.min.js') }}"></script>
            <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
            <script>
                $.widget.bridge('uibutton', $.ui.button);
            </script>
            <!-- Bootstrap 3.3.7 -->
            <script src="{{ asset('AdminLTE-2.4.10/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
            <!-- Bootstrap WYSIHTML5 -->
            <script src="{{ asset('AdminLTE-2.4.10/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
            <!-- Slimscroll -->
            <script src="{{ asset('AdminLTE-2.4.10/bower_components/jquery-slimscroll/jquery.slimscroll.min.js') }}"></script>
            <!-- FastClick -->
            <script src="{{ asset('AdminLTE-2.4.10/bower_components/fastclick/lib/fastclick.js') }}"></script>
            <!-- iCheck -->
            <script src="{{ asset('AdminLTE-2.4.10/plugins/iCheck/icheck.min.js') }}"></script>
            <!-- AdminLTE App -->
            <script src="{{ asset('AdminLTE-2.4.10/dist/js/adminlte.min.js') }}"></script>

            <script>
                $(function () {
                    // $('input').iCheck();
                });
            </script>
        {% endblock %}
    </body>
</html>
