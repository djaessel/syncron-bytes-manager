{% extends 'base.html.twig' %}

{% block title %}Star{% endblock %}
{% block sub_title %}Video{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        html body {
          min-height: unset;
          max-height: unset;
        }

        html body .dark {
          background-color: black;
        }

        .dark {
          max-height: 596px !important;
        }

        .content-wrapper, .content, .dark {
          background-color: #888;
        }

        /* Container needed to position the button. Adjust the width as needed */
        .container {
          position: relative;
          width: auto;
          margin-left: 0;
          margin-right: 0;
          padding-left: 0;
          padding-right: 0;
        }

        /* Make the image responsive */
        .container img {
          width: 100%;
          height: auto;
        }

        /* Style the button and place it in the middle of the container/image */
        .container .btn {
          position: absolute;
          top: 8%;
          right: 8%;
          color: white;
          font-size: 16px;
          padding: 12px 24px;
          border: none;
          cursor: pointer;
          border-radius: 5px;
        }

    </style>
{% endblock %}

