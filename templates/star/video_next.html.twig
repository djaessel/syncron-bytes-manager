{% extends 'base_ajax.html.twig' %}

{% block title %}Star{% endblock %}
{% block sub_title %}Video{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        .content-wrapper, .content, .dark {
          background-color: #888;
        }

        /* Container needed to position the button. Adjust the width as needed */
        .container {
          position: relative;
          width: auto;
          margin-left: 0;
          margin-right: 0;
          padding-left: 0;
          padding-right: 0;
        }

        /* Make the image responsive */
        .container img {
          width: 100%;
          height: auto;
        }

        /* Style the button and place it in the middle of the container/image */
        .container .btn {
          position: absolute;
          top: 8%;
          right: 8%;
          color: white;
          font-size: 16px;
          padding: 12px 24px;
          border: none;
          cursor: pointer;
          border-radius: 5px;
        }

    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
          window.onload = maxWindow;

          console.log(screen);

          function maxWindow() {
              window.moveTo(0, 0);

              if (document.all) {
                  top.window.resizeTo(screen.availWidth, screen.availHeight);
              } else if (document.layers || document.getElementById) {
                  if (top.window.outerHeight < screen.availHeight || top.window.outerWidth < screen.availWidth) {
                      top.window.outerHeight = screen.availHeight;
                      top.window.outerWidth = screen.availWidth;
                  }
              }
          }
        });
    </script>
{% endblock %}


{% block content %}

    <div id="containerX" class="container">
      <img src="https://i.pinimg.com/originals/7e/4a/63/7e4a633b14bfecc98d08c5a2f8823981.gif" alt="Stargate Dial">
      <a class="btn btn-primary" href="{{ path('star-video', {'videoId': app.session.get("nextVideoId")}) }}">
        {{ "Next Episode" }}
      </a>
    </div>

{% endblock %}
