{% extends 'base.html.twig' %}

{% block title %}Star{% endblock %}
{% block sub_title %}Videos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content-wrapper, .content, .dark {
          background-color: #888;
        }

        .list-group, .list-group-item {
          background-color: #444;
          color: whitesmoke !important;
        }
    </style>
{% endblock %}

